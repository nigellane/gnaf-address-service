# Database Configuration
DATABASE_URL=postgresql://gnaf_user:gnaf_pass@localhost:5432/gnaf_service
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=gnaf_service
DATABASE_USER=gnaf_user
DATABASE_PASSWORD=gnaf_pass

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0
API_BASE_PATH=/api/v1

# G-NAF Dataset Configuration
GNAF_DATASET_PATH=/data/gnaf
GNAF_DOWNLOAD_URL=https://data.gov.au/dataset/19432f89-dc3a-4ef3-b943-5326ef1dbecc
GNAF_UPDATE_SCHEDULE="0 2 * * 1" # Weekly on Monday at 2 AM
GNAF_QUARTERLY_CHECK=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=/var/log/gnaf-service.log

# Performance Configuration
CACHE_TTL=3600
ADDRESS_SEARCH_LIMIT=50
BATCH_PROCESSING_LIMIT=1000
REQUEST_TIMEOUT=30000

# API Keys and Authentication
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring and Health
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Security
CORS_ENABLED=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development Features
DEBUG_QUERIES=false
MOCK_GNAF_DATA=false
ENABLE_SWAGGER_UI=true